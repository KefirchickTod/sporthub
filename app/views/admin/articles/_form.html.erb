<div class="form-group">
    <%= form.label :title, 'Title', class: "form-label" %>
    <%= form.text_field :title, class: 'form-control form-control-lg', required: true %>
</div>
<div class="form-group">
    <%= form.label :categories_id, 'Category', class: "form-label" %>
    <%= form.collection_select :categories_id, categories, :id, :title, class: 'form-control form-control-lg', required: true %>
</div>
<div class="form-group">
    <%= form.label :is_public, 'Is public', class: "form-label" %>
    <%= form.check_box :is_public, value: '1', class: '', required: true %>
</div>
<div class="form-group">
    <%= form.label :default_photo, 'Photo(url)', class: "form-label" %>
    <%= form.text_field :default_photo, class: 'form-control form-control-lg', required: true %>
</div>
<div class="form-group">
    <%= form.label :image, 'Main photo', class: "form-label" %>
    <%= form.file_field :image, class: 'form-control form-control-lg', required: true %>
</div>
<div class="form-group">
    <%= form.label :short_text, 'Short text', class: "form-label" %>
    <%= form.text_area :short_text, class: 'form-control form-control-lg', required: true %>
</div>
<div class="form-group">
    <%= form.label :full_text, 'Full text', class: "form-label" %>
    <%= form.text_area :full_text, class: 'form-control form-control-lg', required: true %>
</div>
<div class="form-group">
    <%= form.submit 'Create', class: 'btn btn-success' %>
</div>
