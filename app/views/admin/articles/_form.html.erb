<div class="form-group">
    <%= form.label :image, 'Main photo', class: "form-label" %>
    <%= form.file_field :image, class: 'form-control form-control-lg', required: true %>
</div>
<div class="form-group">
    <%= form.label :categories_id, 'Subcategory', class: "form-label" %>
    <%= form.collection_select :categories_id, categories, :id, :title, class: 'form-control form-control-lg', required: true %>
</div>
<div class="form-group">
    <%= form.label :categories_id, 'Teams', class: "form-label" %>
    <%= form.collection_select :teams_id, Team.all, :id, :title, class: 'form-control form-control-lg' %>
</div>
<div class="form-group">
    <%= form.label :countries_id, 'Location', class: "form-label" %>
    <%= form.collection_select :countries_id, Country.all, :id, :title, class: 'form-control form-control-lg' %>
</div>
<div class="form-group">
    <%= form.label :title, 'Article headline', class: "form-label" %>
    <%= form.text_field :title, class: 'form-control form-control-lg', required: true %>
</div>
<div class="form-group">
    <%= form.label :caption, 'Caption', class: "form-label" %>
    <%= form.text_field :caption, class: 'form-control form-control-lg', required: true %>
</div>
<div class="form-group">
    <%= form.label :content, 'Content', class: "form-label" %>
    <%= form.text_area :content, class: 'form-control form-control-lg', required: true %>
</div>


<div class="form-group">
    <%= form.label :is_public, 'Is public', class: "form-label" %>
    <%= form.check_box :is_public, value: '1', class: '', required: true %>
</div>
<div class="form-group">
    <%= form.label :show_comment, 'Show comment', class: "form-label" %>
    <%= form.check_box :show_comment, value: '1', class: '', required: true %>
</div>


<div class="form-group">
    <%= form.submit 'Create', class: 'btn btn-success' %>
</div>
